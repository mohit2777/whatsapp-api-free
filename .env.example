# WhatsApp Multi-Automation Configuration
# Copy this file to .env and fill in the values

# =============================================================================
# REQUIRED - Database (Choose one)
# =============================================================================

# Option 1: Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Option 2: Direct PostgreSQL
DATABASE_URL=postgresql://postgres:password@host:5432/dbname

# =============================================================================
# REQUIRED - Dashboard Authentication
# =============================================================================
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your-secure-password

# =============================================================================
# REQUIRED - Security
# =============================================================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-random-64-character-hex-string

# =============================================================================
# OPTIONAL - Server Configuration
# =============================================================================
PORT=3000
NODE_ENV=production

# =============================================================================
# OPTIONAL - Typing Indicator
# =============================================================================
# Show "typing..." before sending messages (milliseconds, 0 to disable)
TYPING_DELAY_MS=1500

# =============================================================================
# OPTIONAL - AI Chatbot Providers
# =============================================================================
OPENAI_API_KEY=sk-xxx
ANTHROPIC_API_KEY=sk-ant-xxx
GEMINI_API_KEY=xxx
GROQ_API_KEY=xxx
OPENROUTER_API_KEY=xxx

# =============================================================================
# OPTIONAL - Advanced Settings
# =============================================================================
# Disable auto-reconnect on startup
DISABLE_AUTO_INIT=false

# Disable message logging to database
DISABLE_MESSAGE_LOGGING=false
